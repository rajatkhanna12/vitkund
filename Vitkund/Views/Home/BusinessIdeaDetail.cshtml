                        </li>
                        <li class="rbt-breadcrumb-item active">Business Details</li>
                    </ul>
                    <h2 class="title">@Model.Title</h2>
                    <p class="description">
                        @Model.ShortDescription
                    </p>

                    <ul class="rbt-meta">
                        <li>
                            <i class="feather-calendar"></i>Last updated
                            @if (Model.UpdateDate.ToString() != null && Model.UpdateDate.ToString() != "")
                            {
                                @Model.UpdateDate.Value.ToString("dd-MM-yyyy");
                            }
                            else
                            { @Model.createDate.Value.ToString("dd-MM-yyyy");

                        }
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>
