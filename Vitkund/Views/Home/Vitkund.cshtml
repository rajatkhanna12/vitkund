<script type="text/javascript">
    $(document).ready(function () {
        $('#error1').hide();
        $('#error2').hide();

       

        $('.vitpagestart').click(function () {
            debugger;
        var isselect = true;
        var selectop = $('#yourchoice :selected').text();
        if (selectop == "-- Select --") {
            $('#error1').show();
            $('#error1').text("Please Select Bussiness").css('color', 'red');
            $('#error2').hide();
            isselect = false;
        }
        else if (selectop == "Job") {
            $('#error2').show();
          
            $('#error2').text("Not Availabel for Job").css('color','red');
            $('#error1').hide();
            isselect = false;
        }
        else {
            $('#error1').hide();
            $('#error2').hide();
        }
        //check
        if (isselect == false) {
            return false;
        }
        else {
            return true;
            }
        });
    });
    $('.close').click(function () {
        $('#modalJob').modal('hide');
    })
    $('.closeBusinessModal').click(function () {
        $('#modalBusiness').modal('hide');
    })
    $(".next").click(function () {
        window.location.href = "/vitkund-gaon";
    });
    function ddlChange() {
       
        var selectop = $('#yourchoice :selected').text();
        if (selectop == "Job") {
            $('#modalJob').modal('toggle');
            $('#modalJob').modal('show');
        }
        else if (selectop == "Business") {
            $('#modalBusiness').modal('toggle');
            $('#modalBusiness').modal('show');
        }
    }
    </script>